{
  "name": "ng-alain-vscode",
  "displayName": "ng-alain snippets",
  "description": "基于ng-alain的代码片断",
  "version": "3.1.1",
  "icon": "ng-alain.png",
  "publisher": "cipchk",
  "license": "MIT",
  "licenseUrl": "LICENSE",
  "homepage": "https://github.com/cipchk/ng-alain-vscode/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/cipchk/ng-alain-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/cipchk/ng-alain-vscode/issues",
    "email": "cipchk@qq.com"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "main": "./out/src/css-tools/extension",
  "categories": [
    "Snippets",
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:html"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ng-alain-vscode.cache",
        "title": "Cache All ng-alain CSS class definitions"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/ts.json"
      },
      {
        "language": "html",
        "path": "./snippets/html.json"
      }
    ]
  },
  "scripts": {
    "build": "run-s snippet:prod class:prod",
    "package": "vsce package",
    "publish": "run-s build package",
    "snippet:prod": "gulp prod",
    "class:prod": "tsc -p ./",
    "class": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "less": "^3.0.0",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@types/less": "^3.0.0",
    "@types/node": "^10.12.2",
    "@types/verror": "^1.10.3",
    "gulp": "^4.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-hb": "^6.0.2",
    "gulp-mustache": "^3.0.0",
    "gulp-sequence": "^0.4.6",
    "gulp-wrap": "^0.13.0",
    "htmlparser2": "^3.10.0",
    "map-stream": "0.0.7",
    "typescript": "^3.1.6",
    "vscode": "^1.1.21"
  }
}
